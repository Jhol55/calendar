# Application
NODE_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/calendar

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Next.js
# Opcional: URL base da aplicação (usado para redirecionamentos)
# Em desenvolvimento: http://localhost:3000
# Em produção: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Opcional: URL da API (geralmente não necessário, as rotas usam request.nextUrl.origin)
# NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_TELEMETRY_DISABLED=1

# Authentication (NextAuth)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Optional: OAuth Providers
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Optional: AI Services
# GROQ_API_KEY=

# Optional: Monitoring
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=

# Workers
WORKER_CONCURRENCY=5
QUEUE_LIMITER_MAX=100
QUEUE_LIMITER_DURATION=1000

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Price IDs (obtenha no Stripe Dashboard após criar os Prices)
# Formato: STRIPE_PRICE_[PLANO]_[PERIODO]
# Exemplo: STRIPE_PRICE_STARTER_MONTHLY=price_1234567890abcdef
STRIPE_PRICE_STARTER_MONTHLY=price_your_starter_monthly_price_id
STRIPE_PRICE_STARTER_YEARLY=price_your_starter_yearly_price_id
STRIPE_PRICE_BUSINESS_MONTHLY=price_your_business_monthly_price_id
STRIPE_PRICE_BUSINESS_YEARLY=price_your_business_yearly_price_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_your_enterprise_monthly_price_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_your_enterprise_yearly_price_id
STRIPE_PRICE_TRIAL_MONTHLY=price_your_trial_price_id

# WhatsApp Official API (Meta/Facebook) - Embedded Signup
# Obtenha essas credenciais em https://developers.facebook.com/apps/
# Configure o Embedded Signup no App Dashboard > WhatsApp > Embedded Signup Builder
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
# Config ID do Embedded Signup (obtido no Facebook App Dashboard > WhatsApp > Embedded Signup Builder)
# Este é diferente do App ID e é necessário para ativar o fluxo de coexistência
WHATSAPP_EMBEDDED_SIGNUP_CONFIG_ID=your_embedded_signup_config_id
NEXT_PUBLIC_WHATSAPP_EMBEDDED_SIGNUP_CONFIG_ID=your_embedded_signup_config_id
# Token para verificação de webhooks do WhatsApp (você escolhe qualquer string aleatória)
# Quando configurar o webhook no Facebook App Dashboard, use este mesmo token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=meu_token_secreto_aleatorio_123

